<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <context:property-placeholder location="classpath:application.conf" ignore-unresolvable="true" />
    <context:component-scan base-package="net.ufrog.leo" use-default-filters="false">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller" />
    </context:component-scan>
    <mvc:annotation-driven>
        <mvc:message-converters>
            <ref bean="jsonConverter" />
        </mvc:message-converters>
    </mvc:annotation-driven>
    <mvc:default-servlet-handler />
    <mvc:interceptors>
        <bean class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor" />
        <bean class="net.ufrog.common.spring.interceptor.TokenInterceptor" />
        <bean class="net.ufrog.leo.client.LeoInterception" />
    </mvc:interceptors>
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver"/>
    <bean class="jetbrick.template.web.springmvc.JetTemplateViewResolver">
        <property name="prefix" value="/WEB-INF/theme/${path.theme}/" />
        <property name="suffix" value=".html" />
        <property name="contentType" value="text/html; charset=utf-8" />
        <property name="order" value="9" />
    </bean>
    <bean class="net.ufrog.common.spring.exception.ExceptionResolver">
        <property name="partViewSuffix" value="" />
        <property name="errorView" value="result" />
        <property name="exceptionHandlers">
            <list>
                <bean class="net.ufrog.common.spring.exception.InvalidArgumentExceptionHandler" />
                <bean class="net.ufrog.common.spring.exception.ServiceExceptionHandler" />
                <bean class="net.ufrog.common.spring.exception.NotSignExceptionHandler">
                    <property name="view" value="sign" />
                    <property name="uri" value="" />
                    <property name="prefix" value="not_sign::" />
                </bean>
            </list>
        </property>
    </bean>
</beans>